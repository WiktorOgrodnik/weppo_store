<%- include('layout-top', {}) %>
<main style="display: grid;">
    <h2>Dziękujemy za złożenie zamówienia</h1>

    <div class='order-info'>
        <div class="order-cart">
        
        <h2>Zamówienie</h2>

        <% for (let i of locals.cart) { %>
                <item id="item-<%= i.product_id %>"> 
                    <img src="./../img/<%= i.image %>" alt="img" width="72" height="60"> 
                    <a href="/product/<%= i.product_id %>"><%= i.name %></a>  
                    <info class='item-info'>
                        <amount id="item-ammount-<%= i.product_id %>" class='item-ammount'><%= i.ammount %></amount> 
                        <price class='item-price'><span id="item-price-<%= i.product_id %>"><%= i.price/100 %></span> zł</price>
                    </info> 
                </item>
            <% } %>
        </div>

        <div>        
            <h3>Dostawa</h3>

            <span class='delivery-info'>Rodzaj dostawy</span>
            <div class="delivery-info">
                <h4>Dane odbiorcy:</h4>
                <span class="delivery-info-description">Imię i nazwisko</span>
                <span class="delivery-info-description">Adress email</span>
                <span class="delivery-info-description">nr telefonu</span>
            </div>
        </div>

        <div>
            <h3>Płatność</h3>
            <span class="delivery-info">Rodzaj płatności</span>
            <div class="delivery-info">
                <h4>Dabe do faktury/rachunku:</h4>
                <span class="delivery-info-description">Imię i nazwisko</span>
                <span class="delivery-info-description">Adress zamieszkania</span>
                <span class="delivery-info-description">kod pocztowy + Miejscowość</span>
            </div>

        </div>

    </div>
</main>
<%- include('layout-bottom', {}) %>